# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

GET     /pm/home                                PM.index

GET     /pm/requisicoes/aquisicao/nova          PM.aquisicao
POST    /pm/requisicoes/aquisicao/salvar        PM.salvarAnexo1

GET     /pm/requisicoes/renovacao/nova          PM.renovacao
POST    /pm/requisicoes/renovacao/salvar        PM.salvarAnexo1

GET     /pm/requisicoes/transferencia/nova      PM.transferencia
POST    /pm/requisicoes/transferencia/salvar    PM.salvarAnexo2

GET     /pm/requisicoes/anexo1/pendentes        PM.anexo1Pendentes
GET     /pm/requisicoes/anexo1/respondidas      PM.anexo1Respondidas

GET     /pm/requisicoes/anexo2/pendentes        PM.anexo2Pendentes
GET     /pm/requisicoes/anexo2/respondidas      PM.anexo2Respondidas

POST    /pm/requisicoes/anexo1/editar           PM.editarAnexo1
POST    /pm/requisicoes/anexo1/excluir          PM.excluirAnexo1

POST    /pm/requisicoes/anexo2/editar           PM.editarAnexo2
POST    /pm/requisicoes/anexo2/excluir          PM.excluirAnexo2

GET     /ex/home                                Exercito.index
GET     /ex/aquisicoes/pendentes                Exercito.aquisicoesPendentes
GET     /ex/aquisicoes/favoraveis               Exercito.aquisicoesFavoraveis
GET     /ex/aquisicoes/desfavoraveis            Exercito.aquisicoesDesfavoraveis
GET     /ex/aquisicoes/todas                    Exercito.todasAquisicoes
GET     /ex/renovacoes/pendentes                Exercito.renovacoesPendentes
GET     /ex/renovacoes/favoraveis               Exercito.renovacoesFavoraveis
GET     /ex/renovacoes/desvaforaveis            Exercito.renovacoesDesfavoraveis
GET     /ex/renovacoes/todas                    Exercito.todasRenovacoes
GET     /ex/transferencias/pendentes            Exercito.transferenciasPendentes
GET     /ex/transferencias/favoraveis           Exercito.transferenciasFavoraveis
GET     /ex/transferencias/desfavoraveis        Exercito.transferenciasDesfavoraveis
GET     /ex/transferencias/todas                Exercito.todasTransferencias

POST    /ex/anexo1/editar                       Exercito.editarAnexo1
POST    /ex/anexo1/salvar                       Exercito.salvarAnexo1

POST    /ex/anexo2/editar                       Exercito.editarAnexo2
POST    /ex/anexo2/salvar                       Exercito.salvarAnexo2

# Ignore favicon requests
GET     /favicon.ico                            404

# Import CRUD routes
*       /admin                                  module:crud

# Import Secure routes
*       /                                       module:secure

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public
GET     /assets/                                staticDir:app/views/syrena/assets
GET     /imagens/                               staticDir:app/views/imagens

GET     /pm/assets/                             staticDir:app/views/syrena/assets
GET     /pm/requisicoes/assets/                 staticDir:app/views/syrena/assets
GET     /pm/requisicoes/aquisicao/assets/       staticDir:app/views/syrena/assets
GET     /pm/requisicoes/renovacao/assets/       staticDir:app/views/syrena/assets
GET     /pm/requisicoes/existentes/assets/      staticDir:app/views/syrena/assets
GET     /pm/requisicoes/transferencia/assets/   staticDir:app/views/syrena/assets
GET     /pm/requisicoes/anexo1/assets/          staticDir:app/views/syrena/assets
GET     /pm/requisicoes/anexo2/assets/          staticDir:app/views/syrena/assets


GET     /ex/assets/                             staticDir:app/views/syrena/assets
GET     /ex/aquisicoes/assets/                  staticDir:app/views/syrena/assets
GET     /ex/renovacoes/assets/                  staticDir:app/views/syrena/assets
GET     /ex/formularios/assets/                 staticDir:app/views/syrena/assets
GET     /ex/transferencias/assets/              staticDir:app/views/syrena/assets
GET     /ex/anexo2/assets/                      staticDir:app/views/syrena/assets

# Catch all
#*       /{controller}/{action}                  {controller}.{action}
