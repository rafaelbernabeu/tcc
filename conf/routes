# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

GET     /pm/home                                PM.index
POST    /pm/requisicoes/editar                  PM.editar
POST    /pm/requisicoes/excluir                 PM.excluir
GET     /pm/requisicoes/aquisicao/nova          PM.aquisicao
POST    /pm/requisicoes/aquisicao/salvar        PM.salvarAnexo1
GET     /pm/requisicoes/renovacao/nova          PM.renovacao
POST    /pm/requisicoes/renovacao/salvar        PM.salvarAnexo1

GET     /pm/requisicoes/existentes/pendentes    PM.existentesPendentes
GET     /pm/requisicoes/existentes/respondidas  PM.existentesRespondidas


GET     /ex/home                                Exercito.index
GET     /ex/aquisicoes/pendentes                Exercito.aquisicoesPendentes
GET     /ex/aquisicoes/favoraveis               Exercito.aquisicoesFavoraveis
GET     /ex/aquisicoes/desfavoraveis            Exercito.aquisicoesDesfavoraveis
GET     /ex/aquisicoes/todas                    Exercito.todasAquisicoes
GET     /ex/renovacoes/pendentes                Exercito.renovacoesPendentes
GET     /ex/renovacoes/favoraveis               Exercito.renovacoesFavoraveis
GET     /ex/renovacoes/desvaforaveis            Exercito.renovacoesDesfavoraveis
GET     /ex/renovacoes/todas                    Exercito.todasRenovacoes

POST    /ex/aquisicoes/editar                   Exercito.editar
POST    /ex/formularios/salvar                  Exercito.salvarAnexo1

# Ignore favicon requests
GET     /favicon.ico                            404

# Import CRUD routes
*       /admin                                  module:crud

# Import Secure routes
*       /                                       module:secure

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public
GET     /assets/                                staticDir:app/views/syrena/assets

GET     /pm/assets/                             staticDir:app/views/syrena/assets
GET     /pm/requisicoes/assets/                 staticDir:app/views/syrena/assets
GET     /pm/requisicoes/aquisicao/assets/       staticDir:app/views/syrena/assets
GET     /pm/requisicoes/renovacao/assets/       staticDir:app/views/syrena/assets
GET     /pm/requisicoes/existentes/assets/      staticDir:app/views/syrena/assets

GET     /ex/assets/                             staticDir:app/views/syrena/assets
GET     /ex/aquisicoes/assets/                  staticDir:app/views/syrena/assets
GET     /ex/renovacoes/assets/                  staticDir:app/views/syrena/assets
GET     /ex/formularios/assets/                 staticDir:app/views/syrena/assets

# Catch all
#*       /{controller}/{action}                  {controller}.{action}
